{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "jsxImportSource": "react",
    "types": ["react", "react-dom", "node"],
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]

  },
  "include": ["src"],
  "exclude": ["node_modules"]
}